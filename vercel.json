{
    "version": 2,
    "builds": [
      {
        "src": "portfolio/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_static.sh",
        "use": "@vercel/static-build",
        "config": { "distDir": "staticfiles" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/media/(.*)",
        "dest": "/mediafiles/$1"
      },
      {
        "src": "/(.*)",
        "dest": "portfolio/wsgi.py"
      }
    ]
  }